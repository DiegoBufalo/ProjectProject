@model SupplyProject.Models.EnvioFornecedor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Concluir Entrega</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
