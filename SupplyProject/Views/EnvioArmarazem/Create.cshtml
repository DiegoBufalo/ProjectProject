@model SupplyProject.Models.EnvioArmarazem

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Enviar Demanda</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Envio do Armarazem para Fornecedor</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.idDemanda, "idDemanda", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("idDemanda", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idDemanda, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.idVeiculo, "Veiculo (Placa)", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("idVeiculo", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idVeiculo, "", new { @class = "text-danger" })
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.statusEnvio, "statusEnvio", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("statusEnvio", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.statusEnvio, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group invisible">
        @Html.LabelFor(model => model.ano_envio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ano_envio, new { htmlAttributes = new { @class = "form-control", @Value = @DateTime.Now.Year} })
            @Html.ValidationMessageFor(model => model.ano_envio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group invisible">
        @Html.LabelFor(model => model.mes_envio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.mes_envio, new { htmlAttributes = new { @class = "form-control", @Value = @DateTime.Now.Month } })
            @Html.ValidationMessageFor(model => model.mes_envio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group invisible">
        @Html.LabelFor(model => model.dia_envio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.dia_envio, new { htmlAttributes = new { @class = "form-control", @Value = @DateTime.Now.Day } })
            @Html.ValidationMessageFor(model => model.dia_envio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Criar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar para lista", "Index")
</div>
