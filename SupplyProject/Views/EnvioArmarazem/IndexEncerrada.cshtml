@model IEnumerable<SupplyProject.Models.EnvioArmarazem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ano_envio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mes_envio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dia_envio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DemandaFinal_produtor.idDemandaFinal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Veiculo.tipo_veiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusEnvioArmazem.statusEnvio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ano_envio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mes_envio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dia_envio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DemandaFinal_produtor.idDemandaFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Veiculo.tipo_veiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusEnvioArmazem.statusEnvio)
            </td>
            <td>
                @if (item.DemandaFinal_produtor.status_demanda == 1)
                {
                    <a href="@Url.Action("Edit","DemandaFinalProdutor", new { id = item.idDemanda })">Concluir Demanda</a>
                    <a href="@Url.Action("Details","EnvioArmarazem", new { id = item.idEnvio })">Detalhes</a>
                }
                
                @Html.ActionLink("Details", "Details", new { id = item.idEnvio })
            </td>
        </tr>
    }

</table>
