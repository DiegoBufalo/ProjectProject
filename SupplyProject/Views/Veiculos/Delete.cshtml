@model SupplyProject.Models.Veiculo

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Você tem certeza que quer deletar esse item?</h3>
<div>
    <h4>Veiculo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Tipo de veiculo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo_veiculo)
        </dd>

        <dt>
            Custo do frete por KM
        </dt>

        <dd>
            @Html.DisplayFor(model => model.custo_frete)
        </dd>

        <dt>
           Capacidade em peso
        </dt>

        <dd>
            @Html.DisplayFor(model => model.capacidade_peso)
        </dd>

        <dt>
            Capacidade em altura
        </dt>

        <dd>
            @Html.DisplayFor(model => model.capacidade_altura)
        </dd>

        <dt>
            Capacidade em largura
        </dt>

        <dd>
            @Html.DisplayFor(model => model.capacidade_largura)
        </dd>

        <dt>
            Capacidade em profundidade
        </dt>

        <dd>
            @Html.DisplayFor(model => model.capacidade_profundidade)
        </dd>

        <dt>
            Placa do veiculo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.placa_veiculo)
        </dd>

        <dt>
            Armazem responsável pelo veiculo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Armazem.nome_armazem)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para lista", "Index")
        </div>
    }
</div>
