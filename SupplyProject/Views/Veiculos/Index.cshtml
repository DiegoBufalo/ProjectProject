@model IEnumerable<SupplyProject.Models.Veiculo>

@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Frota de Veiculos</h2>
@if (Session["tipoUsuario"].ToString() == "Gerente")
{
<p>
    @Html.ActionLink("Inserir novo veiculo", "Create")
</p>
}

<table class="table">
    <tr>
        <th>
            Id veiculo
        </th>
        <th>
            Placa
        </th>
        <th>
            Tipo
        </th>
        <th>
            Garagem
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idVeiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.placa_veiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo_veiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Armazem.nome_armazem)
            </td>
            <td>
                @if (Session["tipoUsuario"].ToString() == "Gerente")
                {
                    @Html.ActionLink("Atualizar", "Edit", new { id = item.idVeiculo })
                }|
                @Html.ActionLink("Detalhar", "Details", new { id = item.idVeiculo }) |
            </td>
        </tr>
    }

</table>
