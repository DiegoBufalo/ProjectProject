@model SupplyProject.Models.Produtor

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Você tem certeza que quer deletar esse item?</h3>
<div>
    <h4>Produtor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Nome do produtor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome_produtor)
        </dd>

        <dt>
            Logradouro do produtor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.logradouro_produtor)
        </dd>

        <dt>
           Numero do produtor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numlogradouro_produtor)
        </dd>

        <dt>
