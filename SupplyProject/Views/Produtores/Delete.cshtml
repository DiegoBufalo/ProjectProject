        </dt>

        <dd>
            @Html.DisplayFor(model => model.cnpj_produtor)
        </dd>

        <dt>
            Telefone do produtor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefone_produtor)
        </dd>

        <dt>
           Email do produtor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email_produtor)
        </dd>

    </dl>

