@model SupplyProject.Models.PedidoFinal_usuario

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cancelar</h2>

<h3>Voce tem certeza que quer cancelar esse pedido?</h3>
<div>
    <h4>Pedido para fornecedor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id pedido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.idPedido)
        </dd>

        <dt>
            Id, Nome usuario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario_idUsuario), @Html.DisplayFor(model => model.Usuario.nome_usuario)
        </dd>

        <dt>
            Armazem destino
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Armazem.nome_armazem)
        </dd>

        <dt>
            Item pedido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Produto_fornecedor.nome_prodF)
        </dd>

        <dt>
           quantidade
        </dt>

        <dd>
            @Html.DisplayFor(model => model.quantidade)
        </dd>

        <dt>
            Valor do pedido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.preco_pedido)
        </dd>

        <dt>
            Status do pedido
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StatusPedido1.nome_status)
        </dd>

        <dt>
            Data de abertura
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dia_pedido)/@Html.DisplayFor(model => model.mes_pedido)/@Html.DisplayFor(model => model.ano_pedido)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancelar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
