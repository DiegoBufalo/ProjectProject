@model IEnumerable<SupplyProject.Models.Produto_fornecedor>

@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Produtos Produtor</h2>

<p>
    @Html.ActionLink("Inserir novo Produto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Id produtor
        </th>
        <th>
            Nome
        </th>
        <th>
            Fornecedor que produz
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idProduto_fornecedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome_prodF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.nome_fornecedor)
            </td>
            <td>
                @if (Session["tipoUsuario"].ToString() == "Fornecedor")
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.idProduto_fornecedor })
                }|
                @Html.ActionLink("Detalhes", "Details", new { id = item.idProduto_fornecedor }) |
               
            </td>
        </tr>
    }

</table>
